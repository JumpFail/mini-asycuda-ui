      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Save" onAction="#save">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Cancel" onAction="#cancel"/>
         </children>
         <BorderPane.margin>
            <Insets />
