                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <TextField fx:id="declarationSearchField" layoutX="449.0" layoutY="238.0" prefHeight="26.0" prefWidth="219.0" promptText="Enter Declaration No" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab text="Importers">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="736.0">
                     <children>
                        <TableView fx:id="importerTable" layoutX="33.0" layoutY="77.0" prefHeight="250.0" prefWidth="376.0">
                          <columns>
                            <TableColumn fx:id="tinColumn" prefWidth="75.0" text="TIN" />
                            <TableColumn fx:id="nameColumn" prefWidth="116.79998779296875" text="Name" />
                              <TableColumn fx:id="addressColumn" prefWidth="183.20001220703125" text="Address" />
                          </columns>
                        </TableView>
                        <Button layoutX="449.0" layoutY="85.0" onAction="#openAddImporter" prefHeight="38.0" text="Add importer" />
                        <Label layoutX="256.0" layoutY="14.0" text="List of importers">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Button layoutX="488.0" layoutY="133.0" mnemonicParsing="false" onAction="#openImporterDetails" prefHeight="38.0" text="View importer details" />
                        <Button layoutX="567.0" layoutY="85.0" mnemonicParsing="false" onAction="#deleteImporter" prefHeight="38.0" text="Delete importer" />
                        <TextField fx:id="importerSearchField" layoutX="449.0" layoutY="238.0" prefHeight="26.0" prefWidth="202.0" promptText="Enter Importer name" />
                        <Label layoutX="442.0" layoutY="187.0" text="Looking for an importer?">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
