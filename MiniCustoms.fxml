<VBox prefHeight="432.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MiniCustomsController">
   <children>
      <TabPane prefHeight="484.0" prefWidth="700.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Dashboard">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="700.0">
                     <children>
                        <Label layoutX="316.0" layoutY="14.0" text="Home">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label layoutX="123.0" layoutY="64.0" text="Recent Declarations">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label layoutX="421.0" layoutY="155.0" prefHeight="30.0" prefWidth="230.0" text="Draft declarations waiting">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <Button layoutX="405.0" layoutY="100.0" mnemonicParsing="false" onAction="#openCreateDeclaration" prefHeight="38.0" prefWidth="124.0" text="Create declaration" />
                        <Button layoutX="546.0" layoutY="100.0" mnemonicParsing="false" onAction="#openAddImporter" prefHeight="38.0" prefWidth="124.0" text="Register importer" />
                        <TableView fx:id="recentDeclarationTable" layoutX="28.0" layoutY="100.0" prefHeight="200.0" prefWidth="358.0">
                          <columns>
                            <TableColumn fx:id="recentDeclNoColumn" prefWidth="91.20001029968262" text="DeclarationNo" />
                            <TableColumn fx:id="recentDateColumn" prefWidth="93.59998321533203" text="Date" />
                              <TableColumn fx:id="recentImporterColumn" prefWidth="92.0" text="Importer" />
                              <TableColumn fx:id="recentStatusColumn" prefWidth="80.0000061035156" text="Status" />
                          </columns>
                        </TableView>
                        <ListView layoutX="429.0" layoutY="200.0" prefHeight="81.0" prefWidth="200.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Declarations">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="declarationTable" layoutX="33.0" layoutY="77.0" prefHeight="258.0" prefWidth="382.0">
                          <columns>
                            <TableColumn fx:id="declNoColumn" prefWidth="98.39996337890625" text="DeclarationNo" />
                            <TableColumn fx:id="dateColumn" prefWidth="71.199951171875" text="Date" />
                              <TableColumn fx:id="importerColumn" prefWidth="85.60003662109375" text="Importer" />
                              <TableColumn fx:id="statusColumn" prefWidth="73.5999755859375" text="Status" />
                              <TableColumn fx:id="itemsColumn" prefWidth="52.0000061035156" text="Items" />
                          </columns>
                        </TableView>
                        <Label layoutX="243.0" layoutY="14.0" text="List of declarations">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Button layoutX="443.0" layoutY="85.0" mnemonicParsing="false" onAction="#openCreateDeclaration" prefHeight="38.0" text="Create declaration" />
                        <Button layoutX="491.0" layoutY="136.0" mnemonicParsing="false" onAction="#openDeclarationDetails" prefHeight="38.0" text="View declaration details" />
